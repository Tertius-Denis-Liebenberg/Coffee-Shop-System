<Window x:Class="CoffeeShopSystem.UserValidation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeShopSystem"
        mc:Ignorable="d"
        Title="Validation" Height="286" Width="800">
    <Grid>
        <Label Content="User Name:" HorizontalAlignment="Left" Margin="90,49,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="114"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="90,82,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="114"/>
        <TextBox x:Name="UserName" HorizontalAlignment="Left" Margin="223,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="393"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Margin="223,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="393"/>
        <Button x:Name="bc1" Content="Confirm" HorizontalAlignment="Left" Margin="220,135,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold" Click="CheckUser"/>
        <Button x:Name="br1" Content="CLICK HERE TO REGESTER" HorizontalAlignment="Left" Margin="416,184,0,0" VerticalAlignment="Top" Width="200" Click="NewUser"/>

    </Grid>
</Window>
